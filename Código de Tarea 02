//Este es el c√≥digo para realizar en equipo
//Equipo5 yasta

#include <stdio.h>

int main(){
  char option;
  do{

    //variables
    int numero=1;
    int n;

    // pantalla
    printf("Dame un numero para sacar su factorial -> ");
    scanf("%d", &n);
    if (n<0){
      printf("No es posible");
    }
    else { 
      for (int i=1; i=>n; i++){
        numero=numero+i;
    }  
    printf("El factorial es: %d",numero);
  }
  printf("Desea realizar otro calculo (s/n): ");
  scanf(" %c", option);
  }
  while (option == 's' || option == 'S');
  printf("Gracias\n");
  return 0;
}
